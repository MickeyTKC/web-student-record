<!DOCTYPE html>
<html>
  <head>
    <%- include('../views/components/head.ejs') %>
  </head>
  </head>
  <body>
    <%- include('../views/components/nav.ejs', {auth:auth}) %>
    <br/><br/>
    <div class="container">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-8">
              <h4 class="card-title text-primary">Add Program</h4>
              <div class="d-flex">
                <button class="btn btn-primary">Submit</button>
              </div>
            </div>
          </div>
        </div>
        <div class="card-body">
            <form action="/update-data. method="POST">
                <div class="form-group">
                  <label for="id">ID:</label>
                  <input type="text" class="form-control" id="id" name="id"  readonly>
                </div>
          
                <div class="form-group">
                  <label for="name">Name:</label>
                  <input type="text" class="form-control" id="name" name="name"  required>
                </div>
          
                <div class="form-group">
                  <label for="dept">Department:</label>
                  <input type="text" class="form-control" id="dept" name="dept" >
                </div>
          
                <div class="form-group">
                  <label for="intro">Introduction:</label>
                  <textarea class="form-control" id="intro" name="intro"></textarea>
                </div>
          
                <div class="form-group">
                  <label for="credit">Credit Requirements:</label>
                  <% data.credit.forEach(credit => { %>
                    <div>
                      <label for="yearType"><strong></strong>:</label>
                      <input type="number" class="form-control" id="yearType" name="credit">
                    </div>
                  <% }) %>
                </div>
          
                <div class="form-group">
                  <label for="leaders">Leaders:</label>
                  <input type="text" class="form-control" id="leaders" name="leaders" >
                </div>
          
                <div class="form-group">
                  <label for="courses">Courses:</label>
                  <input type="text" class="form-control" id="courses" name="courses" >
                </div>
          
                <div class="form-group">
                  <label for="yearFrom">Year Created:</label>
                  <input type="text" class="form-control" id="yearFrom" name="yearFrom" >
                </div>
          
                <div class="form-group">
                  <label for="status">Status:</label>
                  <input type="text" class="form-control" id="status" name="status" >
                </div>
              </form>
        </div>
      </div>
    </div>
    <%- include('../views/components/foot.ejs')  %>
  </body>
</html>
