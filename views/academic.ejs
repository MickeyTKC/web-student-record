<!DOCTYPE html>
<html>
  <head>
    <%- include('../views/components/head.ejs') %>
    <style>
      .modern-table {
  border-collapse: collapse;
  width: 100%;
}

.modern-table th,
.modern-table td {
  padding: 8px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

.modern-table th {
  background-color: #f2f2f2;
  color: #333;
}

.modern-table tbody tr:hover {
  background-color: #f9f9f9;
}

.modern-table tbody td {
  font-weight: 400;
}

.modern-table tbody tr:nth-child(even) {
  background-color: #f2f2f2;
}
    </style>
  </head>
  <body>
    <%- include('../views/components/nav.ejs') %>
    <%=(JSON.stringify(data))%>
    <br><br>
    <table class="modern-table">
      <thead>
        <tr>
          <th colspan="2">Course Information</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Student ID</td>
          <td><%= data[0].studentId %></td>
        </tr>
        <tr>
          <td>Course ID</td>
          <td><%= data[0].courseId %></td>
        </tr>
        <tr>
          <td>Course Name</td>
          <td><%= data[0].name %></td>
        </tr>
        <tr>
          <td>Year</td>
          <td><%= data[0].year %></td>
        </tr>
        <tr>
          <td>Semester</td>
          <td><%= data[0].sem %></td>
        </tr>
        <tr>
          <td>Credit</td>
          <td><%= data[0].credit %></td>
        </tr>
        <tr>
          <td>Final Grade</td>
          <td><%= data[0].grade.final %></td>
        </tr>
      </tbody>
    </table>
    
    <br>
    
    <table class="modern-table">
      <thead>
        <tr>
          <th colspan="3">Grades</th>
        </tr>
        <tr>
          <th>Student ID</th>
          <th>Item Name</th>
          <th>Mark</th>
        </tr>
      </thead>
      <tbody>
        <% data[0].grade.items.forEach(function(item) { %>
          <tr>
            <td><%= data[0].studentId %></td>
            <td><%= item.itemName %></td>
            <td><%= item.mark %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
    <%- include('../views/components/foot.ejs')  %>
  </body>
</html>
